<div class="page-container">


			<li class="start active ">
				<a href="/taskview">
					<span class="title">Work</span>
					<span class="selected"></span>
				</a>
			</li> 

</div>

 <div class="page-content">
			<div class="row">
				<div class="col-md-12"> 
					<ul class="page-breadcrumb breadcrumb"> 

					
						<li>

							<a href="#">Home</a>

						</li>
						<li>
							<a href="#">Work </a>
						</li> 
						

						
					</ul> 
				</div>
			</div> 
			<div class="row">
				<div class="col-md-12">


								<div class="btn-group">
									<a href="/taskview"><button >
									View Work &nbsp;
									</button></a>
								</div>
								


							<div class="caption">
								<i class="fa fa-reorder"></i> Add Work
							</div>




							<%try{%>

							<form class="form-horizontal form-bordered" action="/tasksave" role="form" method='post'>
                                
								<div class="form-body">


									<div class="form-group">
										<label class="col-md-3 ">Work</label>
										<div class="col-md-9">
                                             
											<input type="text" class="form-control" id="work" name="work"  required >
										</div>
									</div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Start-date</label>
                                        <div class="col-md-9">

                                            <input type="date" class="form-control" id="start_date" name="start_date"  required >
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <label class="col-md-3 control-label">End-date</label>
                                        <div class="col-md-9">

                                            <input type="date" class="form-control" id="end_date" name="end_date"  required >
                                        </div>
                                    </div>




                                    <div class="form-actions ">
								 <div class="col-md-offset-3">
								     <button type="submit" name="submit" class="btn green">Submit</button>   
									 <button type="reset" class="btn default">Cancel</button>
								</div>
							</div>


								</div>
							</form>

							<%}catch (ex){}%>
					</div>
				</div>
			</div>
</div>

</body>





</html>
