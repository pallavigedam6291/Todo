<html>
<head></head>


<body>
<table class="table table-striped table-hover table-bordered" id="sample_2">
    <thead>
    <tr>
        <th style="display: none"></th>
        <th>Work</th>
        <th>Start-date </th>
        <th>End-Date</th>
        <th>Operations</th>
    </tr>
    </thead>
    <tbody>

    <% try { if(data.length){

    for(var i = 0;i < data.length;i++) { %>
    <tr class="odd gradeX">
        <td style="display: none"></td>
        <td class="textform"><%=data[i].work%></td>
        <td class="textform"><%=data[i].start_date%></td>
        <td class="textform"><%=data[i].end_date%></td>

        <td><button><a data-toggle="modal" data-target="#operation<%=data[i].id%>"><i class='glyphicon glyphicon-adjust' style='color:black'></i></a></button></td>
    </tr>

    <div class="modal fade" id="operation<%=data[i].id%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog1">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="alert alert-danger" style="backgtround-color:red">
                        <strong>Do Your Choice!!</strong>
                    </div>
                    <center>
                        <button class="modal-button"><a href='/taskedit/<%=data[i].id%>'><span class='glyphicon glyphicon-edit' style='color:darkred'></span>&nbsp;Edit</a></button>
                        <br><br>
                        <button class="modal-button"><a data-toggle="modal" data-target="#myModal1<%=data[i].id%>"><i class='fa fa-trash-o' style='color:blueviolet'></i>&nbsp;Delete</a></button>
                        <br><br>

                    </center>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" style="background-color: red">X</button>

                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="myModal1<%=data[i].id%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="alert alert-danger" style="backgtround-color:red">
                        <strong>Do you want to delete?</strong>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                    <a href="/taskdelete/<%=data[i].id%>" class="btn btn-primary">Ok</a>
                </div>
            </div>
        </div>
    </div>

    <%  }}else{ %>
        <tr>
            <td colspan="15">No Data found
            </td>
        </tr>
    <% } }catch (ex){}%>

    </tbody>
</table>

</body>
</html>